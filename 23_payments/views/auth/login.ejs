<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <% if(errorMessage) { %>
     <div class="user-message user-message--error"><%= errorMessage %></div>
    <% } %>
    <form class="login-form" action="/login" method="POST">
      <div class="form-control">
        <label for="email">Email</label>
        <input type="text" name="email" id="email" 
          value="<%= locals.oldInput && oldInput.email %>" 
          class="<%= locals.validationErrors && (validationErrors.find(e => e.path === 'email') ? 'invalid' : '' ) %>">
      </div>
      <div class="form-control">
        <label for="password">Password</label>
        <input type="password" name="password" id="password" 
          value="<%= locals.oldInput && oldInput.password %>" 
          class="<%= locals.validationErrors && (validationErrors.find(e => e.path === 'password') ? 'invalid' : '' ) %>">
      </div>
      
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="container-login">
        <button class="btn" type="submit">Login</button>
  
        <a class="btn" href="/reset">Reset Password</a>
      </div>
    </form>
    
  </main>
<%- include('../includes/end.ejs') %>